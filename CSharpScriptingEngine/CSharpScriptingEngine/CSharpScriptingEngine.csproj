<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Matthew French</Authors>
    <PackageProjectUrl>https://github.com/MatthewFrench/CSharpScriptingEngine</PackageProjectUrl>
    <RepositoryUrl>https://github.com/MatthewFrench/CSharpScriptingEngine</RepositoryUrl>
    <PackageTags>CSharpScriptingEngine, C#, Scripting, Engine, Better, Than, Lua</PackageTags>
    <PackageId>MatthewFrench.CSharpScriptingEngine</PackageId>
    <Description>Allows loading C# scripts on runtime and executing them.</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="log4net" Version="2.0.8" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="2.9.0" />
  </ItemGroup>

</Project>
